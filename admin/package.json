{
  "name": "weave-admin-backend",
  "version": "0.1.0",
  "description": "Admin backend for web crawling and content ingestion with Weave instrumentation",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --ignore 'client/**' --ignore 'dist/**' src/index.ts",
    "dev:admin": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" --names \"admin-backend,admin-frontend\" --prefix-colors \"blue,green\"",
    "dev:backend": "tsx watch --ignore 'client/**' --ignore 'dist/**' src/index.ts",
    "dev:frontend": "cd client && npm run dev",
    "build": "cd client && npm run build && cd .. && esbuild src/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "start": "NODE_ENV=production node dist/index.js",
    "test": "vitest",
    "test:unit": "vitest run src/tests/unit",
    "test:functional": "vitest run tests/functional",
    "test:integration": "vitest run tests/integration",
    "test:ui": "vitest run tests/ui",
    "test:all": "npm run test:unit && npm run test:functional && npm run test:integration && npm run test:ui",
    "test:coverage": "vitest run --coverage",
    "install:all": "npm install && cd client && npm install",
    "clean": "rm -rf node_modules client/node_modules dist client/dist coverage",
    "lint": "eslint src --ext .ts && cd client && npm run lint",
    "format": "prettier --write \"src/**/*.ts\" && cd client && npm run format"
  },
  "keywords": [
    "weave",
    "rag",
    "web-crawler",
    "neo4j",
    "llm"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "neo4j-driver": "^5.14.0",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "turndown": "^7.1.2",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.4",
    "@types/cors": "^2.8.17",
    "@types/uuid": "^9.0.7",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "vitest": "^1.0.4",
    "vite": "^5.4.19",
    "esbuild": "^0.25.0",
    "supertest": "^6.3.3",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^1.0.4",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "prettier": "^3.1.1",
    "playwright": "^1.40.1",
    "concurrently": "^9.1.0"
  }
}

