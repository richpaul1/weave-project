{
  "name": "weave-admin-backend",
  "version": "0.1.0",
  "description": "Admin backend for web crawling and content ingestion with Weave instrumentation",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --ignore 'client/**' --ignore 'dist/**' src/index.ts",
    "build": "cd client && npm run build && cd .. && esbuild src/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "install:all": "npm install && cd client && npm install",
    "test": "vitest run tests/unit tests/functional tests/integration tests/ui",
    "test:unit": "vitest run tests/unit",
    "test:functional": "vitest run tests/functional",
    "test:integration": "vitest run tests/integration",
    "test:performance": "vitest run tests/performance",
    "test:ui": "vitest run tests/ui",
    "test:rl": "vitest run tests/unit/rl tests/functional/rl tests/integration/rl tests/performance/rl",
    "test:all": "vitest run tests",
    "test:watch": "vitest watch tests",
    "test:coverage": "vitest run --coverage tests",
    "test:weave": "tsx run-weave-test.ts",
    "test:weave-unit": "vitest run tests/integration/weave-integration.test.ts",
    "test:rl-prompt": "tsx run-rl-prompt-test.ts"
  },
  "keywords": [
    "weave",
    "rag",
    "web-crawler",
    "neo4j",
    "llm"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "neo4j-driver": "^5.14.0",
    "node-fetch": "^3.3.2",
    "socket.io": "^4.8.1",
    "turndown": "^7.1.2",
    "uuid": "^9.0.1",
    "weave": "^0.9.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.4",
    "@types/sinon": "^17.0.4",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.6.1",
    "esbuild": "^0.25.0",
    "eslint": "^8.55.0",
    "msw": "^2.11.3",
    "playwright": "^1.40.1",
    "prettier": "^3.1.1",
    "sinon": "^17.0.1",
    "supertest": "^6.3.3",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.4.19",
    "vitest": "^1.0.4"
  }
}
