{
  "name": "weave-agent-ui-tests",
  "version": "0.1.0",
  "description": "UI tests for Weave Agent using Vitest + Playwright",
  "type": "module",
  "scripts": {
    "test:ui": "vitest run tests/ui --reporter=verbose",
    "test:ui:watch": "vitest tests/ui",
    "test:ui:headed": "HEADED=true vitest run tests/ui --reporter=verbose",
    "install:playwright": "npx playwright install chromium"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "dotenv": "^16.3.1",
    "playwright": "^1.40.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  }
}
